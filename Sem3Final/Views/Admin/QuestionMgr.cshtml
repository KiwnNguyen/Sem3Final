
@{
    ViewBag.Title = "QuestionMgr";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section head{
    <link href="~/Content/Assets/Admin/tb/assets/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/Admin/tb/assets/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/Admin/tb/assets/vendors/themify-icons/css/themify-icons.css" rel="stylesheet" />
    <!-- PLUGINS STYLES-->
    <link href="~/Content/Assets/Admin/tb/assets/vendors/DataTables/datatables.min.css" rel="stylesheet" />
    <!-- THEME STYLES-->
    <!--<link href="~/Content/Assets/Admin/tb/assets/css/main.min.css" rel="stylesheet" />-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}

<main class="content-wrapper">
    <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12">
            <div class="mdc-card">
                <div class="ibox">
                    <div class="ibox-head">
                        <h2 class="ibox-title">QUESTION MANAGER</h2>
                        <div class="ibox-title"><a href="/admin/AddQuestion">Add Question</a></div>
                    </div>
                    <div class="ibox-body">
                        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Status</th>
                                    <th>Title</th>
                                    <th>Kind of Question</th>
                                    <th>View Details</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in ViewBag.qt)
                                {


                                    <tr>
                                        <td>
                                            <a href="/admin/ChangeStatusQuestion/@item.id">
                                                @if (item.status == 1)
                                                {
                                                    <i class="fa-solid fa-toggle-on" style="color:green"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa-solid fa-toggle-off" style="color:green"></i>
                                                }
                                            </a>

                                        </td>
                                        <td>@item.title</td>
                                        <td>@item.titleofcategory</td>
                                        <td><a href="/admin/ViewDtQuestion/@item.id">View</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

@section scripts{
    <script src="~/Content/Assets/Admin/tb/assets/vendors/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/Assets/Admin/tb/assets/vendors/popper.js/dist/umd/popper.min.js" type="text/javascript"></script>
    <script src="~/Content/Assets/Admin/tb/assets/vendors/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/Assets/Admin/tb/assets/vendors/metisMenu/dist/metisMenu.min.js" type="text/javascript"></script>
    <script src="~/Content/Assets/Admin/tb/assets/vendors/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- PAGE LEVEL PLUGINS-->
    <script src="~/Content/Assets/Admin/tb/assets/vendors/DataTables/datatables.min.js" type="text/javascript"></script>
    <!-- CORE SCRIPTS-->
    <script src="~/Content/Assets/Admin/tb/assets/js/app.min.js" type="text/javascript"></script>
    <!-- PAGE LEVEL SCRIPTS-->
    <script type="text/javascript">
        $(function () {
            $('#example-table').DataTable({
                pageLength: 10,
            });
        })
    </script>
}

