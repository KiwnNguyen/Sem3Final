
@{
    ViewBag.Title = "AddQuestion";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

}
@section head{
    <style>
        body {
            font-family: sans-serif;
        }

        .container {
            width: 500px;
            margin: 0 auto;
        }

        .question {
            border: 1px solid #ccc;
            padding: 20px;
        }

        .answers {
            margin: 20px;
        }


            .answers label {
                display: block;
                margin-bottom: 10px;
            }

            .answers input[type="radio"] {
                margin-right: 5px;
            }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
}

<main class="content-wrapper">
    <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12">
            <div class="mdc-card">
                <div class="container">
                    <div class="question">
                        <form action="/admin/SaveQuestion" method="post">
                            <div class="mdc-text-field mdc-text-field--outlined">
                                <input type="text" name="title" class="mdc-text-field__input" id="text-field-hero-input">
                                <div class="mdc-notched-outline">
                                    <div class="mdc-notched-outline__leading"></div>
                                    <div class="mdc-notched-outline__notch">
                                        <label for="text-field-hero-input" class="mdc-floating-label">Title of question</label>
                                    </div>
                                    <div class="mdc-notched-outline__trailing"></div>
                                </div>
                            </div>
                            <div class="template-demo">
                                <div class="mdc-select demo-width-class" data-mdc-auto-init="MDCSelect">
                                    <input type="hidden" name="enhanced-select-idcat">
                                    <i class="mdc-select__dropdown-icon"></i>
                                    <div class="mdc-select__selected-text"></div>
                                    <div class="mdc-select__menu mdc-menu-surface demo-width-class">
                                        <ul class="mdc-list">
                                            <li class="mdc-list-item mdc-list-item--selected" data-value="" aria-selected="true">
                                            </li>
                                            @foreach (var item in ViewBag.catques)
                                            {
                                                <li class="mdc-list-item" data-value="@item.id">
                                                    @item.title
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                    <span class="mdc-floating-label">Category Of Question</span>
                                    <div class="mdc-line-ripple"></div>
                                </div>
                            </div>

                            <div class="answers">

                                <label for="answer1">
                                    <input type="radio" id="answer1" name="iscorrect" value="0">

                                    <input type="text" name="titleas" value="Đáp án 1" />
                                </label>
                                <label for="answer2">
                                    <input type="radio" id="answer2" name="iscorrect" value="1">
                                    <input type="text" name="titleas" value="Đáp án 2" />
                                </label>
                                <label for="answer3">
                                    <input type="radio" id="answer3" name="iscorrect" value="2">
                                    <input type="text" name="titleas" value="Đáp án 3" />
                                </label>
                                <label for="answer4">
                                    <input type="radio" id="answer4" name="iscorrect" value="3">
                                    <input type="text" name="titleas" value="Đáp án 4" />
                                </label>
                                @*<button id="add-option">Thêm tùy chọn</button>*@
                                <button class="btn btn-primary" type="submit">SUBMIT</button>
                            </div>
                        </form>



                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

@section scripts{
    <script>
        const addOptionButton = document.getElementById('add-option');

        addOptionButton.addEventListener('click', function () {
            const answerLabel = document.createElement('label');
            const answerInput = document.createElement('input');
            const answerTitle = document.createElement('input')
            answerInput.type = 'radio';
            answerInput.name = 'answer';
            answerTitle.type = 'text';
            answerTitle.name = 'answer';
            answerLabel.appendChild(answerInput);
            answerLabel.appendChild(document.createTextNode('Đáp án mới'));
            const answersContainer = document.querySelector('.answers');
            answersContainer.appendChild(answerLabel);
        });


    </script>

}

